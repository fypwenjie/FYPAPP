<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="30px"
    android:weightSum="100"
    android:id="@+id/food_layout">

    <LinearLayout
        android:id="@+id/food_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:orientation="vertical"
        android:paddingRight="20px">

        <TextView
            android:id="@+id/title_food"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:textAlignment="viewStart"
            android:textSize="16sp"
            android:text="Food 1"
            android:textColor="#646464"
            android:textStyle="bold" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/desc_food"
            android:inputType="textMultiLine"
            android:maxLines="2"
            android:minLines="1"
            android:text="Brocolli, Leave , Chilli, Beef"
            android:textSize="14sp"
            android:textColor="#a1a1a1"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/price_food"
            android:paddingTop="10px"
            android:maxLines="1"
            android:minLines="1"
            android:text="RM 12.90"
            android:textSize="14sp"
            android:textColor="#646464"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/img_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/food_img"
            android:layout_width="150px"
            android:layout_height="150px"
            android:layout_gravity="end"
            android:scaleType="centerCrop"
            android:src="@drawable/no_image" />
    </LinearLayout>
</LinearLayout>